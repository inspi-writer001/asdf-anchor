#!/usr/bin/env bash
set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")
source "${plugin_dir}/lib/utils.bash"

# These should be set by asdf
install_type="$ASDF_INSTALL_TYPE"
version="$ASDF_INSTALL_VERSION" 
install_path="$ASDF_INSTALL_PATH"

if [ "$install_type" != "version" ]; then
  echo "asdf-anchor only supports installing specific versions"
  exit 1
fi

# The download script already downloaded the file, we just need to install it
# No need to download again!

echo "Installing Anchor $version to $install_path"

mkdir -p "$install_path/bin"

# Find the downloaded binary in ASDF_DOWNLOAD_PATH
# The download script should have downloaded it there
downloaded_file="$ASDF_DOWNLOAD_PATH/anchor"

if [ ! -f "$downloaded_file" ]; then
  echo "Downloaded file not found at $downloaded_file"
  exit 1
fi

# Copy the downloaded binary to install location
cp "$downloaded_file" "$install_path/bin/anchor"
chmod +x "$install_path/bin/anchor"

echo "âœ… Anchor v$version installed successfully"