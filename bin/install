#!/usr/bin/env bash
set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")
source "${plugin_dir}/lib/utils.bash"

# Get version and paths from asdf
install_type="$ASDF_INSTALL_TYPE"
version="$ASDF_INSTALL_VERSION" 
install_path="$ASDF_INSTALL_PATH"

if [ "$install_type" != "version" ]; then
  echo "asdf-anchor only supports installing specific versions"
  exit 1
fi

echo "Installing Anchor v${version} to ${install_path}"

# Create install directory
mkdir -p "$install_path/bin"

# Copy the downloaded binary from download step
downloaded_file="$ASDF_DOWNLOAD_PATH/$TOOL_NAME"

if [ ! -f "$downloaded_file" ]; then
  echo "Downloaded file not found at $downloaded_file"
  exit 1
fi

# Copy to install location
cp "$downloaded_file" "$install_path/bin/$TOOL_NAME"
chmod +x "$install_path/bin/$TOOL_NAME"

# Verify installation
if ! "$install_path/bin/$TOOL_NAME" --version >/dev/null 2>&1; then
  fail "Installation verification failed"
fi

echo "âœ… Anchor v${version} installed successfully"