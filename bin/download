#!/usr/bin/env bash
set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")
source "${plugin_dir}/lib/utils.bash"

# Get version and paths from asdf
version="${ASDF_INSTALL_VERSION}"
download_path="${ASDF_DOWNLOAD_PATH:?Must be set by ASDF}"

echo "Downloading Anchor v${version}..."

# Use the hybrid download function
download_release "$version" "$download_path/$TOOL_NAME"

echo "Download completed: $download_path/$TOOL_NAME"